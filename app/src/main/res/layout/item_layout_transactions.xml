<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:animateLayoutChanges="true"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvSingleTransactionTransactionsItemLayout"
        style="@style/SingleTransactionsCardItemLayoutColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:contentPadding="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/tvSingleTransactionCategoryTransactionsItemLayout"
            style="@style/MainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="@font/open_sans_bold"
            android:text="@string/placeholder_text_last_expenses"
            android:textSize="14sp" />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvSingleTransactionAmountTransactionsItemLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:lines="1"
        android:ellipsize="end"
        android:visibility="visible"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/placeholder_text_last_expense_expense"
        android:textColor="@color/bittersweet_red"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/cvSingleTransactionTransactionsItemLayout"
        app:layout_constraintEnd_toStartOf="@+id/tvTransactionDateTransactionsItemLayout"
        app:layout_constraintStart_toEndOf="@+id/cvSingleTransactionTransactionsItemLayout"
        app:layout_constraintTop_toTopOf="@+id/cvSingleTransactionTransactionsItemLayout" />



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvBulkTransactionTransactionsItemLayout"
        style="@style/BulkTransactionsCardItemLayoutColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:contentPadding="5dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp">

        <TextView
            android:id="@+id/tvBulkTransactionCategoryTransactionsItemLayout"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:lines="1"
            android:ellipsize="end"
            android:fontFamily="@font/lexend_bold"
            android:text="@string/text_bulk"
            android:textSize="14sp" />

    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/tvBulkTransactionAmountTransactionsItemLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/lexend_bold"
        android:lines="1"
        android:visibility="visible"
        android:text="@string/placeholder_text_last_expense_expense"
        android:textColor="@color/bittersweet_red"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/cvBulkTransactionTransactionsItemLayout"
        app:layout_constraintEnd_toStartOf="@+id/tvTransactionDateTransactionsItemLayout"
        app:layout_constraintStart_toEndOf="@+id/cvBulkTransactionTransactionsItemLayout"
        app:layout_constraintTop_toTopOf="@+id/cvBulkTransactionTransactionsItemLayout" />

    <TextView
        android:id="@+id/tvTransactionDateTransactionsItemLayout"
        style="@style/MainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/placeholder_text_start_point_date"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>