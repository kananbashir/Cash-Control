<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/BottomSheetBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingBottom="40dp"
    tools:context=".ui.fragment.bottomsheet.UpdateProfileNameBottomSheetFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView3"
        style="@style/TextCardBackgroundColor"
        android:layout_width="match_parent"
        android:layout_height="2.3dp"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="165dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvUpdateProfileNameFragUpdateProfileName"
        style="@style/Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/text_update_profile_name"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialCardView3" />

    <EditText
        android:id="@+id/etProfileNameFragUpdateProfileName"
        style="@style/UserInputViceVersa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/open_sans"
        android:includeFontPadding="false"
        android:inputType="text"
        android:maxLength="50"
        android:padding="13dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUpdateProfileNameFragUpdateProfileName" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btConfirmFragUpdateProfileName"
        style="@style/ButtonColorViceVersa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/open_sans_bold"
        android:text="@string/text_button_confirm"
        android:textSize="15sp"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etProfileNameFragUpdateProfileName" />

</androidx.constraintlayout.widget.ConstraintLayout>